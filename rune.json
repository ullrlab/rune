{
    "$schema": "./misc/rune.schema.json",
    "configs": {
        "target": "rune",
        "output": "bin/{config}/{arch}",
        "testOutput": "none",
        "testProfile": "default",
        "profile": "release",
        "targetType": "exe"
    },
    "profiles": [
        {
            "name": "release",
            "arch": "windows_amd64",
            "entry": "src",
            "buildFlags": [
                "-vet"
            ]
        }
    ],
    "testProfiles": [
        {
            "name": "default",
            "flags": [
                "-vet"
            ]
        }
    ],
    "scripts": {
        "clean": "py ./scripts/clean.py"
    }
}