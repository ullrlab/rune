{
    "$schema": "./misc/rune.schema.json",
    "configs": {
        "target": "rune",
        "output": "bin/{config}/{arch}",
        "profile": "debug",
        "mode": "exe"
    },
    "profiles": [
        {
            "name": "debug",
            "arch": "windows_amd64",
            "entry": "src",
            "buildFlags": [
                "-debug"
            ]
        },
        {
            "name": "release",
            "arch": "windows_amd64",
            "entry": "src",
            "preBuild": {
                "scripts": [
                    "echo"
                ]
            },
            "postBuild": {
                "scripts": [
                    "echo"
                ]
            }
        }
    ],
    "scripts": {
        "echo": "py ./scripts/print.py"
    }
}