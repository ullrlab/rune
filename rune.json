{
    "$schema": "./misc/rune.schema.json",
    "configs": {
        "target": "rune",
        "output": "bin/{config}/{arch}",
        "test_output": "none",
        "profile": "release",
        "test_profile": "test_default",
        "target_type": "exe"
    },
    "profiles": [
        {
            "name": "release",
            "arch": "windows_amd64",
            "entry": "src",
            "build_flags": [
                "-vet"
            ]
        },
        {
            "name": "test_default",
            "arch": "windows_amd64",
            "entry": "tests",
            "build_flags": [
                "-vet"
            ]
        }
    ],
    "scripts": {
        "clean": "py ./scripts/clean.py"
    }
}